<h1>My Profile</h1>


<div class="row">

    <div class="col s6">
        {{#if user.avatarUrl }}
            <img class="avatar"
                 src="{{user.avatarUrl}}"
                 alt="avatar-{{user.name}}">
        {{else}}
            <img class="avatar"
                 src="https://www.pngitem.com/pimgs/m/516-5167304_transparent-background-white-user-icon-png-png-download.png"
                 alt="avatar-{{user.name}}">
        {{/if}}


    </div>

    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p>Your Email:
                <strpong>{{user.email}}</strpong>
            </p>

            <div class="input-field col s6 col s12 ">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label class="active" for="name">Name</label>
                <span class="helper-text" data-error="wrong" data-success="right">Write Name</span>
            </div>

            <div class="file-field input-field col s6  s12">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <div class="col s6 s12">
                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn">Change</button>
            </div>

        </form>
    </div>

</div>
