<h1>Course</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>
    <div class="row">
        <div class="input-field col s12">
            <input id="first_name2" name="name" type="text" class="validate" required value="{{data.name}}">
            <label class="active" for="first_name2">Name Course</label>
            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">
            <input id="first_name2" name="price" type="text" class="validate" required value="{{data.price}}">
            <label class="active" for="first_name2">Price Course</label>
            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">
            <input id="first_name2" name="url" type="text" class="validate" required value="{{data.url}}">
            <label class="active" for="first_name2">URL image</label>
            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Add Courses</button>
</form>
