<h1> Edit  {{course.name}}  </h1>


<form action="/courses/edit" method="POST">
    <div class="row">
        <div class="input-field col s12">
            <input id="first_name2" name="name" type="text" class="validate" required value="{{course.name}}">
            <label class="active" for="first_name2">Name Course</label>
            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>

    </div>
    <div class="row">
        <div class="input-field col s12">
            <input id="first_name2" name="price" type="text" class="validate" required value="{{course.price}}">
            <label class="active" for="first_name2">Price Course</label>
            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">
            <input id="first_name2" name="url" type="text" class="validate" required value="{{course.url}}">
            <label class="active" for="first_name2">URL Image</label>
            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
        </div>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary"> Edit Course</button>

</form>

<form action="/courses/remove" method="post" class="course-form" >
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn red"> Delete Course</button>
</form>

