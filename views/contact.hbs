<h2>Courses</h2>

{{#if courses.length }}
{{#each courses }}
<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <img src={{img}} alt={{title}}>
        <span class="card-title">{{title}}</span>
      </div>
      <div class="card-content">
        <p> {{price}} </p>
      </div>
      <div class="card-action">
        <button class="btn "> Open Course </button>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<span>No Courses</span>
{{/if}}